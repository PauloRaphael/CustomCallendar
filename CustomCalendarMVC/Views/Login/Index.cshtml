
<form method="post" action="/Login">
    <div class="col-sm-3">
        <label class="form-label mt-4" for="password">Enter Password:</label>
        <input class="form-control" type="password" name="inputPassword" id="password" required />
        <button class="btn btn-primary mt-4" type="submit">Login</button>
    </div>
</form>
<p style="color:red;">@ViewBag.Error</p>