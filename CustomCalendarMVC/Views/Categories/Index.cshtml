@model IEnumerable<DataRepository.Entities.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <h1>@ViewData["Title"]</h1>
    <p class="mt-auto mb-auto">
        <a asp-action="Create" class="btn btn-primary me-3">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit text-light"></span></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-info-circle text-light"></span></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash-o text-light"></span></a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>
