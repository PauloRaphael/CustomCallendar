@model DataRepository.Entities.Block

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Important)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Important)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name) <!-- Display the Category Name -->
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
</div>
