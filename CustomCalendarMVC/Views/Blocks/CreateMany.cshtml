@model ManyBlockViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <h1>@ViewData["Title"]</h1>
    <p class="mt-auto mb-auto">
        <a asp-action="Create" class="btn btn-primary">Create Single</a>
    </p>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMany">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Block.Title" class="control-label"></label>
                <input asp-for="Block.Title" class="form-control" />
                <span asp-validation-for="Block.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Block.Date" class="control-label"></label>
                <input asp-for="Block.Date" class="form-control" />
                <span asp-validation-for="Block.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Block.EventText" class="control-label"></label>
                <textarea asp-for="Block.EventText" class="form-control"></textarea>
                <span asp-validation-for="Block.EventText" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Block.Important" class="control-label me-2"></label>
                <input asp-for="Block.Important" class="form-check-input" />
            </div>
            <div class="form-group">
                <label asp-for="Block.CategoryId" class="control-label"></label>
                <select asp-for="Block.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="Block.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repetitions" class="control-label"></label>
                <input asp-for="Repetitions" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Span" class="control-label"></label>
                <select asp-for="Span" class="form-control">
                    <option>Daily</option>
                    <option>Monthly</option>
                    <option>Yearly</option>
                </select>
                <span asp-validation-for="Span" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
